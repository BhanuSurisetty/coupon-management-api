              "raw": "{\n  \"code\": \"SUMMER25\",\n  \"type\": \"CART_WISE\",\n  \"description\": \"10% off on carts over Rs. 100\",\n  \"discount\": {\n    \"type\": \"PERCENTAGE\",\n    \"value\": 10\n  },\n  \"is_active\": true,\n  \"conditions\": {\n    \"minimum_cart_value\": 100\n  }\n}"
